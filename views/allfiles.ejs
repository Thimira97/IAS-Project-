<%- include('partials/header'); -%>

    <%- include('partials/nav'); -%>
        <h2 style="text-align: center;">All Files</h2>
        <ul class="recipes">
            <% if (blogs.length > 0){ %>
                <% blogs.forEach(blog => { %>
                    <li class="recipe">
                        <img src="/file.png" alt="smoothie recipe icon">
                        <a href="/allfiles/<%= blog._id %>">
                            <h4>
                                <%= blog.name %>
                            </h4>
                            <p>
                                <%= blog.userEmail1 %>
                            </p>
                            <p style="font-size: 15px">
                                <%= blog.date %>
                            </p>
                        </a>
                    </li>
                    <% }) %>
                        <% } else { %>
                            <div class="noFiles">
                                <h4>There are no uploaded files to display....</h4>
                            </div>
                            <% } %>
        </ul>

        <%- include('partials/footer'); -%>